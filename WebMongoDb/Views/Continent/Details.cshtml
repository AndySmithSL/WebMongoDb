@model WebMongoDb.Models.Continent;

@{
    ViewData["Title"] = "Details";
}

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <a class="navbar-brand" href="#">Continent</a>
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" asp-action="Index">Index</a></li>
        <li class="nav-item"><a class="nav-link" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></li>
        <li class="nav-item"><a class="nav-link" asp-action="Delete" asp-route-id="@Model.Id">Delete</a></li>
        <li class="nav-item"><a class="nav-link" asp-action="Details" asp-route-id="@Model.Id">Details</a></li>
        <!-- Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                Lists
            </a>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-action="SubcontinentsList" asp-route-id="@Model.Id">Subcontinents</a>
                <a class="dropdown-item" asp-action="TerritoriesList" asp-route-id="@Model.Id">Territories</a>
            </div>
        </li>
    </ul>
</nav>

<br />
<div class="alert alert-dark rounded p-2">
    <div class="d-flex">
        <div>
            <i class='fas fa-globe-africa' style='font-size:48px;'></i>
        </div>
        <div class="p-2 pl-3">
            <h4>@Model.Name</h4>
            <h6>@Model.Code</h6>
        </div>
    </div>
</div>
